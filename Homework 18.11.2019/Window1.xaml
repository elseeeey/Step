<Window x:Class="Homework_18._11._2019.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_18._11._2019"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Canvas>
        <TextBlock Canvas.Left="300" Canvas.Top="120">
            Login:
        </TextBlock>
        <TextBox x:Name="LoginTextBox" Canvas.Left="300" Canvas.Top="150" Width="100" Height="20">

        </TextBox>
        <TextBlock Canvas.Left="300" Canvas.Top="180">
            Password:
        </TextBlock>
        <PasswordBox x:Name="PasswordTextBox" Canvas.Left="300" Canvas.Top="210" Width="100" Height="20">

        </PasswordBox>
        <Button x:Name="LogButton" Canvas.Left="300" Canvas.Top="250" Width="100" Height="25" Click="LogButton_Click">
            Login:
        </Button>
        <Button x:Name="RegButton" Canvas.Left="300" Canvas.Top="300" Width="100" Height="25" Click="RegButton_Click">
            Register:
        </Button>
    </Canvas>
</Window>
